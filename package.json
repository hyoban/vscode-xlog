{
  "publisher": "hyoban",
  "name": "xlog",
  "displayName": "xLog",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "description": "",
  "author": {
    "name": "hyoban",
    "url": "https://github.com/hyoban"
  },
  "license": "MIT",
  "homepage": "https://github.com/hyoban/vscode-xlog#readme",
  "repository": "hyoban/vscode-xlog",
  "bugs": {
    "url": "https://github.com/hyoban/vscode-xlog/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.83.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "pack": "vsce package --no-dependencies",
    "prepare": "simple-git-hooks",
    "publish": "vsce publish --no-dependencies",
    "release": "bumpp && nr publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "nr build"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@types/node": "^20.11.28",
    "@types/vscode": "1.83.0",
    "@vscode/vsce": "^2.24.0",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "eslint-config-hyoban": "^0.2.2",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.4",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.10.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
